game:GetService("Players").PlayerAdded:Connect(function(player)  
    local script = game.ServerScriptService:WaitForChild("Kicker")  

    local targetPlayer = game.ServerScriptService.Kicker:GetPlayers()[player.Character.Name]  

    local targetPlayerChat = game:GetService("Chat")  

    targetPlayerChat.Message:Connect(function()  
       
script:FireServer("Kick", player)  
    end)
end)
